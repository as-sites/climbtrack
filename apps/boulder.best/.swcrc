{
	"jsc": {
		"target": "es2023",
		"parser": {
			"syntax": "typescript",
			"decorators": true,
			"dynamicImport": true
		},
		"transform": {
			"decoratorMetadata": true,
			"legacyDecorator": true
		},
		"keepClassNames": true,
		"externalHelpers": true,
		"loose": true
	},
	"module": {
		"type": "commonjs"
	},
	"sourceMaps": true,
	"exclude": [
		"jest.config.[ct]s",
		".*\\.spec.tsx?$",
		".*\\.test.tsx?$",
		"./src/jest-setup.ts$",
		"./**/jest-setup.ts$",
		".*.js$",
		".*.d.ts$"
	]
}
